{% extends 'base.html.twig' %}

{% block title %}Les bibliothèques{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-4">Liste des bibliothèques</h2>
        <ul class="list-group mt-3">
            {% for librairy in listLibrairy %}
                <li class="list-group-item d-flex justify-content-between align-items-center">{{ librairy.name }}<a href="{{ path('librairy', {id : librairy.id}) }}" class="btn btn-primary">Les livres</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
